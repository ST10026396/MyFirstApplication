<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="214dp"
        android:layout_height="148dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/starsuckslogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="@string/order_now"
        android:textColor="@color/starbucks_green"
        android:textSize="32sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="232dp"
                android:layout_height="152dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sb1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="232dp"
                android:layout_height="152dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sb2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="232dp"
                android:layout_height="152dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sb5" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="232dp"
                android:layout_height="152dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sb3" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="232dp"
                android:layout_height="152dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sb4" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="232dp"
                android:layout_height="152dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sb6" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>